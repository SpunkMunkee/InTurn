<div class="product">
<% if item_is_link%>
  <h4><strong><%= link_to product.item, product %></strong></h4>
<% else %>
  <h4><strong><%= product.item %></strong></h4>
<% end %>
  <h5><strong>Price:</strong> $<%= product.price %></h5>
  <h6>Description:</h6>
  <h6><%= product.description %></h6>
</div>